@model IEnumerable<zerohunger.EF.Restaurent>

@{
   // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>

    <style>
        /* Styles for the table */
        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
            margin-top:3%;
        }

        th, td {
            text-align: left;
            padding: 8px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #4CAF50;
            color: white;
        }

        tr:hover {
            background-color: #f5f5f5;
        }

        .details {
            color: #666;
        }

            .details a {
                color: #4CAF50;
                margin-right: 10px;
            }
        /* Style for the form button */
        
        }
    </style>

</head>
<body>

    <h1>Restaurant List</h1>
    <br />
        <a href="/Program/CollectionReq" 
           style=" background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 4px; cursor: pointer; text-decoration:none">
    Collection Request
        </a>
    
    <div class="container">
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Food</th>
                    <th>Quantity</th>
                    <th>Expires in (Days)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.food)</td>
                        <td>@Html.DisplayFor(modelItem => item.quantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.expiredate)</td>
                        <td class="details">
                            <a href="/Program/Edit/@item.id">Edit</a>
                            <a href="/Program/Delete/@item.id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
